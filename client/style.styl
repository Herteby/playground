html
	font-family Arial
head //Just testing weird CSS for fun
	display block
	background #222
	color #fff
	padding 20px
	font-size 24px
	*
		display block 
body
	background #eee	
	margin 20px
input
	padding 5px
button
	padding 5px 10px
span
	border 1px solid #aaa
	padding 5px
.list
	display flex
	flex-wrap wrap
	margin 10px 0
.item
	color #fff
	text-shadow 0 0 1px #000
	margin 5px
	padding 10px 15px
	flex-grow 1
	border-radius 4px
	font-family Monospace
	box-shadow 0 1px 2px #666
	cursor pointer
	overflow hidden
	white-space nowrap
	max-width 100px
	text-align center
	transition background 1s, border-radius 2s
pre
	background #fff
	border 1px solid #aaa
	padding 10px